{
  "extends": [
    "stylelint-config-standard-scss"
  ],
  "plugins": [
    "stylelint-scss",
    "@stylistic/stylelint-plugin"
  ],
  "rules": {
    "@stylistic/indentation": 2,
    "@stylistic/string-quotes": "double",
    "@stylistic/color-hex-case": "lower",
    "no-empty-source": null,
    "selector-class-pattern": null
  }
}
